<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/water_gradient_bg">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_android_black_24dp"
        android:contentDescription="Android Logo"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center" />

    <!-- App Info Title -->
    <TextView
        android:id="@+id/tvAppInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Information"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- Description of the app -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to SwimLink! This app connects trainers and trainees for a seamless swimming experience. You can track schedules, goals, and progress! With a user-friendly interface and advanced features, itâ€™s perfect for all levels of swimming enthusiasts."
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- More information about app features -->
    <TextView
        android:id="@+id/tvMoreInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Features:\n- Link trainers and trainees\n- Manage swimming schedules\n- Recieve swimming tips \n\nBenefits:\n- Enhances learning experience\n- Connects users with experts\n- Promotes healthy living"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- Contact Email -->
    <TextView
        android:id="@+id/tvContactEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For inquiries, contact us at: ofekah2903@gmail.com"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- Back Button -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button_red"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

</LinearLayout>
