<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title (Headline) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="פרטי מדריך"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:paddingBottom="20dp"/>

        <!-- Experience -->
        <EditText
            android:id="@+id/etExperience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="שנות ניסיון"
            android:inputType="number"
            android:layout_marginTop="8dp" />

        <!-- Price -->
        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="מחיר לשיעור"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp" />

        <!-- Training Types Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="בחר סוגי שיעורים:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>

        <CheckBox
            android:id="@+id/cbBeginner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="שחייה למתחילים" />

        <CheckBox
            android:id="@+id/cbAdvanced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="טכניקה מתקדמת" />

        <CheckBox
            android:id="@+id/cbCompetitive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="אימוני תחרות" />

        <CheckBox
            android:id="@+id/cbSafety"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="בטיחות והישרדות במים" />

        <CheckBox
            android:id="@+id/cbRehab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="שיקום וטיפול במים" />

        <CheckBox
            android:id="@+id/cbInfants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="שחייה לתינוקות ופעוטות" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveTrainerDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שמור פרטים"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/button_blue"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</ScrollView>
