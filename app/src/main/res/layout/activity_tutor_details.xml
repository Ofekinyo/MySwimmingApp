<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/water_gradient_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title (Headline) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="פרטי מדריך"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:paddingBottom="20dp"/>

        <!-- Experience -->
        <EditText
            android:id="@+id/etExperience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="שנות ניסיון"
            android:inputType="number"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:background="@drawable/edittext_background"/>

        <!-- Price -->
        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="מחיר לשיעור"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:background="@drawable/edittext_background"/>
        <!-- Training Types Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="בחר סוגי שיעורים:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="12dp"/>

        <CheckBox
            android:id="@+id/cbBeginner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="שחייה למתחילים"
            android:textColor="@color/white"/>

        <CheckBox
            android:id="@+id/cbAdvanced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="טכניקה מתקדמת"
            android:textColor="@color/white"/>

        <CheckBox
            android:id="@+id/cbCompetitive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="אימוני תחרות"
            android:textColor="@color/white"/>

        <CheckBox
            android:id="@+id/cbSafety"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="בטיחות והישרדות במים"
            android:textColor="@color/white"/>

        <CheckBox
            android:id="@+id/cbRehab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="שיקום וטיפול במים"
            android:textColor="@color/white"/>

        <CheckBox
            android:id="@+id/cbInfants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="שחייה לתינוקות ופעוטות"
            android:textColor="@color/white"/>

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveTutorDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שמור פרטים"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_button_green"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</ScrollView>
