<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_edit_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/water_gradient_bg"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="עריכת פרטי משתמש"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="24dp" />

        <!-- First Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שם פרטי:"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/editFname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="שם פרטי כלשהו"
            android:inputType="textPersonName"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <!-- Last Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שם משפחה:"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/editLname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="שם משפחה כלשהי"
            android:inputType="textPersonName"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <!-- Email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="מייל:"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="someone@example.com"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <!-- Phone -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="טלפון:"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/editPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="050-1234567"
            android:inputType="phone"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <!-- City -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="עיר:"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/editCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="תל אביב"
            android:inputType="text"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <!-- Gender -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="מין:"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/editGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="זכר / נקבה"
            android:inputType="text"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <!-- Age -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="גיל:"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/editAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="18"
            android:inputType="number"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <!-- Role -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="תפקיד:"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/editRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="שחיין / מדריך"
            android:inputType="text"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="שמור שינויים"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_button_white"
            android:padding="10dp"
            android:elevation="4dp" />
    </LinearLayout>
</ScrollView>
