<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_session_requests"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".screens.SessionRequests">

    <!-- Title -->
    <TextView
        android:id="@+id/textView_requests_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="בקשות לשיעורים"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- RecyclerView for session requests -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_requests"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

</LinearLayout>
