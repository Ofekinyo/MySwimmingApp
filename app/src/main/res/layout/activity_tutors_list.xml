<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/water_gradient_bg"
    android:layoutDirection="rtl">

    <!-- Logo -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/cropped_image"
        android:contentDescription="לוגו האפליקציה"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTrainersList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="רשימת מדריכים"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/blue1_font"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal" />

    <!-- Search Bar -->
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="חפש מדריך..."
        android:padding="10dp"
        android:background="@android:drawable/editbox_background"
        android:backgroundTint="@android:color/darker_gray"
        android:textSize="16sp"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="8dp"
        android:layout_marginBottom="10dp" />

    <!-- Spinner -->
    <Spinner
        android:id="@+id/searchSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" />

    <!-- RecyclerView (scrollable list) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTrainers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never" />

    <!-- Replaced Back Button -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="חזור לעמוד הראשי"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="@color/blue1_font"
        android:textColor="@android:color/white"
        android:drawableStart="@android:drawable/ic_media_previous"
        android:drawablePadding="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp" />
</LinearLayout>
