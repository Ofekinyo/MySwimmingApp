<!-- activity_trainer_info.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TextView to display the trainer's name -->
    <TextView
        android:id="@+id/tvTrainerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trainer Name"
        android:textSize="24sp"
        android:textColor="@android:color/black" />

    <!-- TextView to display the trainer's full details -->
    <TextView
        android:id="@+id/tvTrainerDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trainer Details will go here"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp" />

</LinearLayout>
