<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/water_card_bg"
    android:elevation="3dp"
    android:layout_margin="5dp">

    <!-- Session Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="My Session"
        android:textColor="@android:color/white"
        android:paddingBottom="8dp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <!-- Trainer Name -->
    <TextView
        android:id="@+id/tvTrainerId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trainer: "
        android:textSize="14sp"
        android:textColor="@android:color/white"/>

    <!-- Session Date -->
    <TextView
        android:id="@+id/tvTraineeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: "
        android:textSize="14sp"
        android:textColor="@android:color/white"/>

    <!-- Session Time -->
    <TextView
        android:id="@+id/lstRequests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time: "
        android:textSize="14sp"
        android:textColor="@android:color/white"/>

    <!-- Session Duration -->
    <TextView
        android:id="@+id/tvSessionDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration: "
        android:textSize="14sp"
        android:textColor="@android:color/white"/>

    <!-- Session Location -->
    <TextView
        android:id="@+id/tvSessionLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location: "
        android:textSize="14sp"
        android:textColor="@android:color/white"/>

    <!-- Goals -->
    <TextView
        android:id="@+id/tvSessionGoals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goals: "
        android:textSize="14sp"
        android:textColor="@android:color/white"/>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:layout_marginTop="8dp"/>

</LinearLayout>
