<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/water_gradient_bg"
    android:gravity="center"
    tools:context=".screens.ContactTrainer">

    <!-- Header -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="צור קשר"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowRadius="4" />

    <!-- Trainer Name -->
    <TextView
        android:id="@+id/tvTrainerNameC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="שם המדריך"
        android:textSize="18sp"
        android:textColor="@color/white" />

    <!-- Container for goals -->
    <LinearLayout
        android:id="@+id/llGoalsCContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_transparent_bg"
        android:padding="16dp"
        android:orientation="vertical"
        android:elevation="6dp">

        <TextView
            android:id="@+id/tvGoalsC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="מטרות"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llGoalsC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <CheckBox
                android:id="@+id/cbGoal1C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="שיפור טכניקה"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/cbGoal2C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="הגברת סיבולת"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/cbGoal3C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="הגברת מהירות"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/cbOtherC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="מטרה נוספת"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/etOtherGoalC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="פרט"
                android:visibility="gone"
                android:padding="12dp"
                android:textSize="16sp"
                android:background="@drawable/rounded_button_blue"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <!-- Notes input -->
    <EditText
        android:id="@+id/etDetailsC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="הערות נוספות"
        android:padding="12dp"
        android:textSize="16sp"
        android:inputType="textMultiLine"
        android:gravity="start|top"
        android:minLines="3"
        android:background="@drawable/rounded_button_blue"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSubmitContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:text="שליחת בקשה"
        android:background="@drawable/rounded_button_green"
        android:textColor="@color/white"
        android:textStyle="bold" />
</LinearLayout>
