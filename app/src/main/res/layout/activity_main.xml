<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/water_gradient_bg"
    android:orientation="vertical"
    android:paddingTop="48dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="20dp"
    android:gravity="center"
    android:fitsSystemWindows="true"
    tools:context=".screens.MainActivity">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/cropped_image"
        android:contentDescription="Android Logo"
        android:layout_marginBottom="24dp" />

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ברוכים הבאים ל Swim Link"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowRadius="4"
        android:layout_marginBottom="32dp" />

    <!-- Buttons Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_transparent_bg"
        android:padding="16dp"
        android:elevation="6dp">

        <!-- Login Button -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="התחברות"
            android:background="@drawable/rounded_button_blue"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Register Button -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="הרשמה"
            android:background="@drawable/rounded_button_green"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Admin Login Button -->
        <Button
            android:id="@+id/btnAdminLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="התחברות מנהל"
            android:background="@drawable/rounded_button_red"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />
    </LinearLayout>

    <!-- Motivational Quote -->
    <TextView
        android:id="@+id/tvQuote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="“פשוט תמשיכו לשחות” - דורי"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp"
        android:shadowColor="#000000"
        android:shadowRadius="4" />

    <!-- My Logo Image -->
    <ImageView
        android:id="@+id/ivDolphin"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:src="@drawable/dolphin"
        android:contentDescription="dolphin"
        android:layout_marginTop="32dp" />

</LinearLayout>
