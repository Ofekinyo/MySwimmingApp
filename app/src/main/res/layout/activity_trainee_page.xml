<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_android_black_24dp"
        android:contentDescription="App Logo"
        android:layout_marginBottom="24dp" />

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Trainee"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/blue1_font"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Trainers List Button -->
    <Button
        android:id="@+id/btnTrainersList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trainers List"
        android:backgroundTint="@color/button_blue"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:elevation="4dp"
        android:layout_marginBottom="16dp" />

    <!-- All Sessions Button -->
    <Button
        android:id="@+id/btnAllSessions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All Sessions"
        android:backgroundTint="@color/button_green"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:elevation="4dp"
        android:layout_marginBottom="16dp" />

    <!-- Session Details Button -->
    <Button
        android:id="@+id/btnSessionDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Session Details"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:elevation="4dp"
        android:layout_marginBottom="16dp" />

    <!-- Logout Button -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/red"
        android:text="Logout"
        android:textColor="@android:color/white"
        android:enabled="true" />

</LinearLayout>
