<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Session Type -->
    <TextView
        android:id="@+id/tvSessionType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Session Type"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvSessionTypeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="24dp" />

    <!-- Length of Session -->
    <TextView
        android:id="@+id/tvLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Length of Session (minutes)"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvLengthValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="24dp" />

    <!-- Date -->
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvDateValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025-01-25"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="24dp" />

    <!-- Goals -->
    <TextView
        android:id="@+id/tvGoals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goals"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvGoalsValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Increase swimming speed"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="24dp" />

    <!-- Trainer's Description -->
    <TextView
        android:id="@+id/tvTrainerDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trainer's Description"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvTrainerDescriptionValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We will focus on technique and speed improvement for this session."
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="24dp" />

    <!-- Accept Button -->
    <Button
        android:id="@+id/btnAccept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accept Session"
        android:backgroundTint="@color/button_green"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:elevation="4dp"
        android:layout_marginTop="20dp" />

    <!-- Decline Button -->
    <Button
        android:id="@+id/btnDecline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Decline Session"
        android:backgroundTint="@color/red"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:elevation="4dp"
        android:layout_marginTop="10dp" />
</LinearLayout>
