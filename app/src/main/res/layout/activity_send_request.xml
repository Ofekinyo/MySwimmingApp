<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/water_gradient_bg"
    android:gravity="center"
    android:layoutDirection="rtl"
    tools:context=".screens.SendRequest">

    <!-- כותרת -->
    <TextView
        android:id="@+id/textViewHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="פרטי הבקשה"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowRadius="4" />

    <!-- שם המדריך -->
    <TextView
        android:id="@+id/tvTrainerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="שם המדריך"
        android:textSize="18sp"
        android:textColor="@color/white" />

    <!-- מטרות -->
    <LinearLayout
        android:id="@+id/llGoalsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_transparent_bg"
        android:padding="16dp"
        android:orientation="vertical"
        android:elevation="6dp">

        <TextView
            android:id="@+id/tvGoals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="מטרות"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llGoals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <CheckBox
                android:id="@+id/cbGoal1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="שיפור טכניקה"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/cbGoal2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="הגברת סיבולת"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/cbGoal3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="הגברת מהירות"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/cbOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="מטרה נוספת"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/etOtherGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="פרט"
                android:visibility="gone"
                android:padding="12dp"
                android:textSize="16sp"
                android:background="@drawable/rounded_button_blue"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <!-- תאריך -->
    <EditText
        android:id="@+id/etDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:clickable="true"
        android:hint="בחר תאריך" />

    <!-- שעה -->
    <EditText
        android:id="@+id/etTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:clickable="true"
        android:hint="בחר שעה" />

    <!-- מיקום -->
    <EditText
        android:id="@+id/etLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="מיקום" />

    <!-- הערות נוספות -->
    <EditText
        android:id="@+id/etNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="הערות נוספות"
        android:padding="12dp"
        android:textSize="16sp"
        android:inputType="textMultiLine"
        android:gravity="start|top"
        android:minLines="3"
        android:background="@drawable/rounded_button_blue"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <!-- כפתור שליחה -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:text="שלח בקשה"
        android:background="@drawable/rounded_button_green"
        android:textColor="@color/white"
        android:textStyle="bold" />

</LinearLayout>
