<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/water_gradient_bg">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/toolbar_gradient"
        android:elevation="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:title="SwimLink"
        android:titleTextColor="@android:color/white" />

    <TextView
        android:id="@+id/tvAdminWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ברוך הבא מנהל יקר!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:textColor="@color/white"
        android:shadowColor="#000000"
        android:shadowRadius="2"/>

    <!-- Button to Edit User -->
    <Button
        android:id="@+id/btnUsersList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="רשימת משתמשים"
        android:background="@drawable/rounded_button_blue"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Button to Delete User -->
    <Button
        android:id="@+id/btnDeleteUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="מחיקת משתמש"
        android:background="@drawable/rounded_button_red"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Button to Add User -->
    <Button
        android:id="@+id/btnAddUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="הוספת משתמש"
        android:background="@drawable/rounded_button_green"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />
    <!-- Logout Button -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/red"
        android:text="התנתקות"
        android:textColor="@android:color/white"
        android:enabled="true" />
</LinearLayout>
