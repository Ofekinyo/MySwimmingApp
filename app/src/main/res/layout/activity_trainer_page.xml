<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/water_gradient_bg">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue1_font"
        android:elevation="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:titleTextColor="@android:color/white" />
    <!-- Logo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/water_gradient_bg">
        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/cropped_image"
            android:contentDescription="App Logo"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center" />

        <!-- Welcome Message -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ברוך הבא מאמן!"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/blue1_font"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

    <!-- Schedule Button -->
        <Button
            android:id="@+id/btnSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="מערכת שעות"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_button_blue"/>
    
    <!-- Session Requests Button -->
        <Button
            android:id="@+id/btnSessionRequests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="בקשות ממתאמנים"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_button_blue"/>



    </LinearLayout>
</LinearLayout>