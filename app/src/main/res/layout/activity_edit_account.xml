<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/water_gradient_bg"
    android:padding="20dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header -->
        <TextView
            android:id="@+id/textViewHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="עריכת פרופיל"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowRadius="4"
            android:layout_marginTop="32dp" />

        <!-- Common fields container -->
        <LinearLayout
            android:id="@+id/commonFieldsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_transparent_bg"
            android:padding="16dp"
            android:elevation="6dp">

            <!-- First Name -->
            <EditText
                android:id="@+id/etFname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="שם פרטי"
                android:padding="12dp"
                android:textSize="16sp"
                android:background="@drawable/rounded_button_blue"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginBottom="12dp" />

            <!-- Last Name -->
            <EditText
                android:id="@+id/etLname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="שם משפחה"
                android:padding="12dp"
                android:textSize="16sp"
                android:background="@drawable/rounded_button_blue"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginBottom="12dp" />

            <!-- Phone -->
            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="טלפון"
                android:inputType="phone"
                android:padding="12dp"
                android:textSize="16sp"
                android:background="@drawable/rounded_button_blue"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginBottom="12dp" />

            <!-- Email -->
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="אימייל"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textSize="16sp"
                android:background="@drawable/rounded_button_blue"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginBottom="12dp" />

            <!-- Age -->
            <EditText
                android:id="@+id/etAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="גיל"
                android:inputType="number"
                android:padding="12dp"
                android:textSize="16sp"
                android:background="@drawable/rounded_button_blue"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginBottom="12dp" />

            <!-- Gender -->
            <EditText
                android:id="@+id/etGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="מין"
                android:padding="12dp"
                android:textSize="16sp"
                android:background="@drawable/rounded_button_blue"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginBottom="12dp" />

            <!-- City -->
            <EditText
                android:id="@+id/etCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="עיר"
                android:padding="12dp"
                android:textSize="16sp"
                android:background="@drawable/rounded_button_blue"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginBottom="12dp" />

            <!-- Password -->
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="סיסמה"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textSize="16sp"
                android:background="@drawable/rounded_button_blue"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginBottom="12dp" />

        </LinearLayout>

        <!-- Trainer-specific fields container -->
        <LinearLayout
            android:id="@+id/trainerFieldsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_transparent_bg"
            android:padding="16dp"
            android:elevation="6dp"
            android:visibility="gone">

            <!-- Experience -->
            <EditText
                android:id="@+id/etExperience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ניסיון (בשנים)"
                android:inputType="number"
                android:padding="12dp"
                android:textSize="16sp"
                android:background="@drawable/rounded_button_blue"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginBottom="12dp" />

            <!-- Price -->
            <EditText
                android:id="@+id/etPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="מחיר לשיעור"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:textSize="16sp"
                android:background="@drawable/rounded_button_blue"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginBottom="12dp" />

            <!-- Training Types -->
            <EditText
                android:id="@+id/etTrainingTypes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="סוגי אימון (מופרדים בפסיק)"
                android:padding="12dp"
                android:textSize="16sp"
                android:background="@drawable/rounded_button_blue"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginBottom="12dp" />

        </LinearLayout>

        <!-- Trainee-specific fields container -->
        <LinearLayout
            android:id="@+id/traineeFieldsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_transparent_bg"
            android:padding="16dp"
            android:elevation="6dp"
            android:visibility="gone">

            <!-- Height -->
            <EditText
                android:id="@+id/etHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="גובה (בסנטימטרים)"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textSize="16sp"
            android:background="@drawable/rounded_button_blue"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginBottom="12dp" />

            <!-- Weight -->
            <EditText
                android:id="@+id/etWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="משקל (בקילוגרם)"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textSize="16sp"
            android:background="@drawable/rounded_button_blue"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginBottom="12dp" />

        </LinearLayout>

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שמור"
            android:background="@drawable/rounded_button_green"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="12dp"
            android:layout_marginTop="24dp" />

    </LinearLayout>

</ScrollView>
